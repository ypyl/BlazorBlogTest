@page "/"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<PageTitle>Index</PageTitle>

@foreach (var articleName in Blog.Articles.Content().Keys)
{
    <button class="btn btn-primary" @onclick="() => NavigateToCounterComponent(articleName)">
        @articleName
    </button>
}


